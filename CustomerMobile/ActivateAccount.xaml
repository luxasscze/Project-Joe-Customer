<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="CustomerMobile.ActivateAccount"
             BackgroundColor="#000">
    <ContentPage.Content>
        <Grid>

            <Image x:Name="bgImage" Aspect="AspectFill" Opacity="0.7"/>
            <StackLayout>
                <Frame BackgroundColor="Black" Padding="24" CornerRadius="0" Opacity="0.7">
                    <Label Text="ACTIVATE ACCOUNT" FontSize="24" HorizontalOptions="End" TextColor="White" FontFamily="brewery"/>
                </Frame>
            </StackLayout>
        </Grid>
    </ContentPage.Content>
</ContentPage>